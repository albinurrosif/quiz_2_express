<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="/stylesheets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include("../partials/sidebar.ejs") %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include("../partials/nav.ejs") %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800">DPI</h1>
            </div>
            <div class="row">
              <div class="col">
                <a href="/dpi/create" class="btn btn-sm btn-success">tambah</a>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Nama dpi</th>
                      <th scope="col">luas</th>
                      <th colspan="2" scope="col">Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < data.length; i++){ %>
                    <tr>
                      <th scope="row"><%= (i+1)%></th>
                      <td><%= data[i].nama_dpi %></td>
                      <td><%= data[i].luas %></td>
                      <td>
                        <a href="/dpi/edit/<%= data[i].id_dpi %>" class="btn btn-sm btn-warning">edit</a>
                        <a href="/dpi/delete/<%= data[i].id_dpi %>" class="btn btn-sm btn-danger">delete</a>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <%- include("../partials/foot.ejs") %>
        </div>
      </div>
    </div>
  </body>
</html>
