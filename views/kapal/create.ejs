<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="/stylesheets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include("../partials/sidebar.ejs") %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include("../partials/nav.ejs") %>
          <div class="container mt-5">
            <h2>Form Kapal</h2>
            <form action="/kapal/store" method="POST">
              <div class="mb-3">
                <label for="nama_kapal" class="form-label">Nama Kapal</label>
                <input type="text" class="form-control" id="nama_kapal" name="nama_kapal" required />
              </div>
              <div class="mb-3">
                <label for="id_pemilik" class="form-label">Pemilik</label>
                <select class="form-control" id="id_pemilik" name="id_pemilik" required>
                  <option value="">Pilih Pemilik</option>
                  <% for (let i = 0; i < dataPemilik.length; i++) { %>
                  <option value="<%= dataPemilik[i].id_pemilik %>"><%= dataPemilik[i].nama_pemilik %></option>
                  <% } %>
                </select>
              </div>
              <div class="mb-3">
                <label for="id_dpi" class="form-label">DPI</label>
                <select class="form-control" id="id_dpi" name="id_dpi" required>
                  <option value="">Pilih DPI</option>
                  <% for (let i = 0; i < dataDpi.length; i++) { %>
                  <option value="<%= dataDpi[i].id_dpi %>"><%= dataDpi[i].nama_dpi %></option>
                  <% } %>
                </select>
              </div>
              <div class="mb-3">
                <label for="id_alat_tangkap" class="form-label">Alat Tangkap</label>
                <select class="form-control" id="id_alat_tangkap" name="id_alat_tangkap" required>
                  <option value="">Pilih Alat Tangkap</option>
                  <% for (let i = 0; i < dataAlatTangkap.length; i++) { %>
                  <option value="<%= dataAlatTangkap[i].id_alat_tangkap %>"><%= dataAlatTangkap[i].nama_alat_tangkap %></option>
                  <% } %>
                </select>
              </div>
              <div class="mb-3">
                <button type="submit" class="btn btn-sm btn-success">Simpan</button>
              </div>
            </form>
          </div>
          <%- include("../partials/foot.ejs") %>
        </div>
      </div>
    </div>
  </body>
</html>
