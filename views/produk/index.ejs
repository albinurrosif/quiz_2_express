<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="/stylesheets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include("../partials/sidebar.ejs") %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include("../partials/nav.ejs") %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <% if (messages.success) { %>
            <div class="alert alert-info" role="alert"><%- messages.success %></div>
            <% } %>
            <div class="row">
              <div class="col py-5">
                <a href="/produk/create" class="btn btn-sm btn-success mb-3">Tambah</a>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Foto</th>
                      <th scope="col">Nama</th>
                      <th scope="col">Harga</th>
                      <th scope="col">Kategori</th>
                      <th scope="col" colspan="2">Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < data.length; i++){ %>
                    <tr>
                      <th scope="row"><%= (i+1) %></th>
                      <td><img src="/images/upload/<%= data[i].foto_produk %>" alt="<%= data[i].foto_produk %>" height="70" /></td>
                      <td><%= data[i].nama_produk %></td>
                      <td><%= data[i].harga_produk %></td>
                      <td><%= data[i].nama_kategori %></td>
                      <td>
                        <a href="/produk/edit/<%= data[i].id_produk %>" class="btn btn-sm btn-warning">Edit</a>
                      </td>
                      <td>
                        <a href="/produk/delete/<%= data[i].id_produk %>" class="btn btn-sm btn-danger">Delete</a>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("../partials/foot.ejs") %>
  </body>
</html>
