<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="/stylesheets/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include("../partials/sidebar.ejs") %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <!-- Topbar -->
          <%- include("../partials/nav.ejs") %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <form action="/produk/store" method="POST" enctype="multipart/form-data">
                  <fieldset>
                    <legend>Input Produk</legend>
                    <div class="mb-3">
                      <label for="nama_produk" class="form-label">Nama Produk</label>
                      <input type="text" class="form-control" id="nama_produk" name="nama_produk" />
                    </div>
                    <div class="mb-3">
                      <label for="harga_produk" class="form-label">Harga Produk</label>
                      <input type="text" class="form-control" id="harga_produk" name="harga_produk" />
                    </div>
                    <div class="mb-3">
                      <label for="foto_produk" class="form-label">Foto Produk</label>
                      <input type="file" class="form-control" id="foto_produk" name="foto_produk" />
                    </div>

                    <div class="mb-3">
                      <label for="id_kategori" class="form-label">kategori</label>
                      <select class="form-select" id="id_kategori" aria-label="Pilih kategori" name="id_kategori">
                        <option value="" selected disabled>Pilih Kategori</option>
                        <% for(var i=0; i < data.length; i++){ %>
                        <option value="<%= data[i].id_kategori %>"><%= data[i].nama_kategori %></option>
                        <% } %>
                      </select>
                      <div class="invalid-feedback">Silakan pilih.</div>
                    </div>

                    <div class="mb-3">
                      <button type="submit" class="btn btn-success">Simpan</button>
                    </div>
                  </fieldset>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("../partials/foot.ejs") %>
  </body>
</html>
